case $@ in
  DVI-0 | left)
    xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '1680x1050+0+0' ;;

  DVI-1 | right)
    xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '2560x1600+1680+0' ;;

  *)
    xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '4240x1600+0+0' ;;
esac

