# ..................................................................... Keyboard

# the finger friendly layout
if [[ -e ~/.Xmodmap ]] ;then
  xmodmap ~/.Xmodmap
  layout='Shift-DH'
else
  setxkbmap us -variant colemak
  left_shift_key
fi
sudo sed -i '/^KEYMAP/cKEYMAP=colemak' /etc/vconsole.conf

notify 'Keyboard Layout' "Colemak $layout"

