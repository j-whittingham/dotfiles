# ...................................................................... Prompts

# if yes && ..
underline $@

while true
do
  read "CONTINUE?continue? [yes]/no : "
  echo
  if [[ -z $CONTINUE || $CONTINUE = [yY] ]] ;then
    return 0
  elif [[ $CONTINUE = [nN] ]] ;then
    return 1
  fi
done

