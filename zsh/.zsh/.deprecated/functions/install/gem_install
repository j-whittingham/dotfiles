# .................................................................. GEM install

# be careful of partial gem list regex matches!
if gem list $@ | grep -q "^$@ " ;then
  heading : "$@   [ INSTALLED ]"
else
  heading : $@
  gem install --no-rdoc --no-ri $@
fi

