# .............................................................. Package manager

# package already installed check
query=$(pacman -Qs $@ | grep "local/$@ .*")

[[ $query ]] && heading ' ' $(echo $query | sed -e 's|local/||' -e 'a\ \ [ INSTALLED ]') \
             || return 1

