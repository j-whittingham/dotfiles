# .................................................................. Alarm clock

# Usage: alarm <time> [message]

[[ -z $1 ]] && delay=1m || delay=$1
[[ -z $2 ]] && msg="Alarm!" || msg="$2"

(
  sleep $delay
  notify "$msg"
  # mpg123 -o pulse /usr/share/qwertickle/typewriter-return.mp3.original
  mpg123 -o pulse ~/sandbox/sonar.mp3
) &

