# ........................................................................ Files

# if --force
if if-opt f "$@" ;then
  echo $@ | sed -e 's/^\-[[:alnum:]]*//' \
                -e 's/ \(.*\) \([^ ]*\)$/\1 ❯❯❯ \2/'
                -e 's/ \-[[:alnum:]]*//g' \
  if-yes "move these files, no questions asked" || return
else
  interactive=-i
fi
command mv -v $interactive $@

