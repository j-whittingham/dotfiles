# .................................................................... Processes

# quick kill!
if [[ $* ]] ;then
  if (( $(pgrep -c -f "$@") )) ;then
    p $@
    if-yes "kill /$@/ "$(echo $(pid $@)) && sudo kill -9 $(pid $@)
  fi
fi

