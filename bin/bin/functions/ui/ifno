#!/usr/bin/bash
# sdothum - 2016 (c) wtfpl

# Prompt
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ..................................................................... Negative

sig=${sig:--TERM}

# if no || ..
underline $@

while : ;do
  printf 'continue? [No]/yes/abort : '
  # using bash's extended read functionality (over dash) for single character input
  IFS= read -rn1 CONTINUE
  echo
  case $CONTINUE in
  n | N | '') exit 0 ;;
  y | Y     ) exit 1 ;;
  a | A     ) { kill $sig ${TMPPID:-$PPID} ; break ;} ;;  # see tmout
  esac
done

# vim: set ft=sh: #
