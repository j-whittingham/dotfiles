#!/usr/bin/bash
# sdothum - 2016 (c) wtfpl

# Prompt
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................................. Affirmative

sig=${sig:--TERM}

# if yes && ..
underline $@

while : ;do
  printf 'continue? [Yes]/no/abort : '
  # using bash's extended read functionality (over dash) for single character input
  IFS= read -rn1 CONTINUE
  echo
  case $CONTINUE in
  y | Y | '') exit 0 ;;
  n | N     ) exit 1 ;;
  a | A     ) { kill $sig ${TMPPID:-$PPID} ; break ;} ;;  # see tmout
  esac
done

# vim: set ft=sh: #
