# Log
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ${COLORS} defined in env

# ...................................................................... Comment

# initial leader
[ $leader ] || leader=.

annotate() {
  while read line ;do
    # indent=$(echo "$(tput cols) - $(echo $line | wc -L) - 3" | bc)
    indent=$(( $(tput cols) - $(echo $line | wc -L) - 3 ))
    [ $indent -gt 0 ] && leader=$(head -c $indent </dev/zero | tr '\0' "$leader")
    log "${__CYAN}@ $leader $line${NOCOLOR}"
    leader=' '
  done
}

echo $@ | annotate
unset leader

# vim: set ft=sh: #
