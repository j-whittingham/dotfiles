maildir=$HOME/Maildir/thedarnedestthing

if ! server ;then
  if [ ! -d $maildir ] ;then
    ssh $SERVER sudo systemctl restart nfs-server
    sudo mount $HOME/Maildir
  fi
fi

/usr/bin/alot

