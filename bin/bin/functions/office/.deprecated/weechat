# ..................................................................... IRC chat

# prevent triggering irc connection spamming
if [[ -e $HOME/.weechat/.start ]] ;then
  since=$(( $(date +%s) - $(< $HOME/.weechat/.start) ))
  if [[ $since -lt 600 ]] ;then
    echo ".. patience!"
    sleep $(( 600 - $since ))
  fi
fi
date +%s > $HOME/.weechat/.start

channels=$(grep '^freenode=' $HOME/build/archlinux/post_install/weechat | sed -e 's/freenode=//' -e 's/"//g')
command weechat -r "/set irc.server.freenode.autojoin '$channels'"

