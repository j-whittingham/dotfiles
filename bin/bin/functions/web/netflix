#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Web
# ══════════════════════════════════════════════════════════════════════════════

# ...................................................................... Browser

BROWSER=qutebrowser
options='-s statusbar.hide true'  # see web/qutebrowser
NAME='http://www.netflix.com/ca'
cycle=0.5  # time

videomode on
pkill -f $BROWSER 2>/dev/null
restore layout 2:3

RUNOPT=$options $BROWSER http://www.netflix.com/ca &
# pid=$(xdotool search --sync --onlyvisible --name "$NAME" getwindowpid)  # use pid to avoid intermittent xdotool BadWindow error
# while pgrep -P $pid >/dev/null ;do sleep $cycle ;done                   # separate instances of qutebrowser attach to this pid, delaying break
pwait "$NAME"

videomode off

# vim: set ft=sh: #
