#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Package
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................... Distribution install

# update master
root=$HOME/build/root

if [ $1 ] ;then
  [ $# -eq 2 ] && host=.$2
  mkdir -pv $root/.${1%/*} || exit 1
  [ -d $1 ] && ditto copying "$(sudo cp -rv --preserve=mode --no-preserve=ownership $1 $root/.${1%/*}$host)" || ditto copying "$(sudo cp -rv --preserve=mode --no-preserve=ownership $1 $root/.${1}$host)"
fi

# vim: set ft=sh: #
