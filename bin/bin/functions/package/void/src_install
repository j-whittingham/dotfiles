# ................................................................ Void src repo

REPO=/net/depot/void-packages

heading : $1
void_src
cd $REPO
empty hostdir/binpkgs && ./xbps-src binary-bootstrap

# xnew $1
# xgensum -f srcpkgs/$1/template
./xbps-src pkg $1
sudo xbps-install --repository=$REPO/hostdir/binpkgs --force $1

