# Package
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................... Distribution install

usage() {
  echo "usage: $(basename $0) <service>"
  exit 1
}

[ $1 ] || usage

sudo mkdir -v /run/runit/supervise.$1
config_install /etc/sv/$1
sudo ln -sfv /run/runit/supervise.$1 /etc/sv/$1/supervise

# vim: set ft=sh: #
