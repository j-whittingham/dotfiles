# ....................................................................... Editor

usage() {
  echo "usage: $(basename $0) <maxdepth> | <name>"
  exit 1
}

# v by directory depth or name
case $1 in
  ''   ) [ -e $DYNAMIC ] && toggle focus
         for i in $(find -L -type d  | filter) ;do
           files=$(find -L $i -maxdepth 1 -type f | filter)
           [ "$files" ] || continue
           echo
           echo $files | sed 's|.*/||'
           ifyes "edit $i" || continue
           v -f $files
         done
         [ -e $DYNAMIC ] && toggle focus ;;

  help ) usage ;;
  [1-4]) v $(find -L -maxdepth ${1:-1} -type f | filter) ;;
  *    ) v $(find -L -type f -name "$1" | filter) ;;
esac

# vim: set ft=sh: #
