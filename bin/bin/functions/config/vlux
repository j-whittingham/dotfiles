#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Configure
# ══════════════════════════════════════════════════════════════════════════════

# .......................................................... Gvim TOD background

usage() { echo "usage: $(basename $0) <city>"; exit 1; }

VLUX=$HOME/.session/vlux
LOCATION=$HOME/.session/location
COLORSCHEME=$HOME/.session/vim:dark
# location offset from ottawa (system) time in -%H%M, +%H%M
offset=+0000

setlink() {
  link=$(readlink -f $2)
  [ ${1##*/} = ${link##*/} ] || ln -sf $1 $2
}

[ -e $VLUX ] || { vset light; exit; }

# import user path
. $HOME/bin/functions/shell/user_path

slock $(basename $0) $$ || exit 1
connect || exit 1
[ $1 ] && location=$1 || { [ -e $LOCATION ] && location=$(cat $LOCATION); }

# https://weather.codes/search/?q=<city> for location codes
case $location in
calgary   ) location=CAXX0054; offset=-0200 ;;
coimbatore) location=INXX0479; offset=+1030 ;;
ottawa    ) location=CAXX0343 ;;
*         ) location=CAXX0343 ;;
esac

# convert offset to minutes
sign=${offset%${offset#?}}
echo $sign | grep -q '[+-]' || exit 1
offset=${offset#?}
H=$(( $offset / 100 ))
M=$(( $offset - $H * 100 ))
offset=$(( $H * 60 + $M ))

# obtain sunrise and sunset raw data from weather.com, see https://github.com/linuxconfig/Sunrise-Sunset-Shell-Script.git
# set -- $(lynx --dump  https://weather.com/weather/today/l/$location | grep '\* Sun' | sed 's/[[:alpha:]]/ /g; s/[*:]//g')
# "sunrise":"2019-11-15T07:01:18-0500","sunset":"2019-11-15T16:33:10-0500"
set -- $(pcurl https://weather.com/weather/today/l/$location | grep '"sunrise":' | sed -r 's/.*"sunrise":"....-..-..T(..:..):..-....","sunset":"....-..-..T(..:..):..-....".*/\1 \2/; s/://g')
# something went wrong..
[ $# -eq 2 ] || exit 1
# am
sunrise=$1
# # pm add 12 hours
# sunset=$(( $2 + 1200 ))
sunset=$2

# daylight colorsheme?
now=$(date '+%-H%M' -d "$sign$offset minutes")
if [ $sunrise -le $now ] && [ $now -le $sunset ] ;then
  [ -e $COLORSCHEME ] && { notify 'Gvim vlux' 'Light colorsheme'; vset light; }
else
  [ -e $COLORSCHEME ] || { notify 'Gvim vlux' 'Dark colorsheme'; vset dark; }
fi

# vim: set ft=sh: #
