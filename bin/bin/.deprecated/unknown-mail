#!/bin/sh

# Office
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ....................................................................... E-mail

# scan unknown mail
unknown=~/.mail/sdothum/unknown

case "$@" in
  c)  ack '^Cc:' $unknown/* | sed 's/.*C[Cc]: *\(.*\)/\1/' | sort | less ;;
  f)  ack '^From:' $unknown/* | sed 's/.*From: *\(.*\)/\1/' | sort | less ;;
  s)  ack '^Subject:.*\[.*\]' $unknown/* | sed 's/.*Subject: *\(.*\)/\1/' | sort | less ;;
  t)  ack '^To:' $unknown/* | sed 's/.*To: *\(.*\)/\1/' | sort | less ;;
  *)  echo ".. unknown(mail)  c'c | f'rom | s'ubject | t'o" ;;
esac
