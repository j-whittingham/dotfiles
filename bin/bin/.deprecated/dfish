# fish functions
lib=~/.config/fish/functions

cd $lib
sudo rm -f *conflicted*copy*.fish
file=$(ls *.fish | sed 's/.fish$//' | sort | $(dwrapper) -p 'Edit Function:')
[[ $file ]] && zsh -c "v $lib/$file.fish"
