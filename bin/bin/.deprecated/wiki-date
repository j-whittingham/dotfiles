#!/bin/sh

# Wiki
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ........................................................... Reset journal date

if [[ $@ =~ [[:digit:]]*-[[:digit:]]*-[[:digit:]]*.wiki ]]; then
  touch -d(echo "$@" | sed 's/.*\([0-9][0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9]\).wiki/\1/') $@
fi
