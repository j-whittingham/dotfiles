#!/bin/sh

# X11 Dynamic Menu
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ......................................................................... Menu

# all dmenu scripts
cd ~/bin
item=$(grep -l dmenu d* \
     | egrep -v 'dbrowser|dhelp|dlist|dmenu|dtest|dmenu' \
     | sed -e '1ihelp ' -e 's/^d//' \
     | $(dmenu) -p 'Run Menu Script')
[[ $item ]] && d$item
