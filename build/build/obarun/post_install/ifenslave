# .................................................................... ifenslave

sed -e "s/eth0 eth2/'enp9s0' 'enp10s0'/" \
    -e 's/static/dhcp/' \
    -e '$aIP6=stateless' \
    -e '/^Address.*/d' \
    /etc/netctl/examples/bonding |
    sudo tee /etc/netctl/bonding

