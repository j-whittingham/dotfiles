# .......................................................................... ghc

if ! grep -q '\[haskell-core\]' /etc/pacman.conf ;then
  sudo sed -i '/\[extra\]/i\[haskell-core\]\
Server = http://xsounds.org/$HOMEhaskell/core/$arch\
' /etc/pacman.conf
  sudo pacman-key -r 4209170B
  sudo pacman-key --lsign-key 4209170B
  sudo pacman -Syyu
fi

