# ...................................................................... auracle

[ -d /net/depot ] && cd /net/depot || cd /tmp
[ -d auracle ] || mkdir auracle
cd auracle
curl -o PKGBUILD https://aur.archlinux.org/cgit/aur.git/plain/PKGBUILD?h=auracle-git
makepkg PKGBUILD
sudo pacman -U auracle*.tar.xz --noconfirm
