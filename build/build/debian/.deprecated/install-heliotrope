#!/usr/local/bin/fish
# su-mail experimental requires rvm environment for non-debian installable gems

log "... script installing heliotrope"
rvm 1.9

apt i html2text libcurl4-dev libcurl4-openssl-dev libncursesw5-dev
gem install trollop whistlepig rest-client sinatra rmail leveldb-ruby locale lrucache curb mail thin
cd /data/depot/mail
rm -Rf heliotrope
git clone https://github.com/rakoo/heliotrope.git
sudo mv heliotrope/ /opt/
