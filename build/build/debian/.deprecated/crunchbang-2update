#!/bin/bash
# sid tint2 tint2conf package conflict: remove tint2conf for now
#set -x

echo ".. enable wireless adaptor"
sudo nm-connection-editor
# ~/.dropbox-dist/dropboxd &
killall xscreensaver

echo ".. enter sudo passwd"
curl http://shell.ninthgate.se/packages/shell-ninthgate-se-keyring.key | sudo apt-key add -
# wget -q http://download.virtualbox.org/virtualbox/debian/oracle_vbox.asc -O- | sudo apt-key add -
sudo apt-get update
sudo apt-get -y --force-yes install deb-multimedia-keyring && sudo apt-get update

# sid tint2conf conflict with original statler install?
if [ -f ~/.tint2conf.remove ]; then
    aptitude search tint2conf | egrep '^i' && sudo apt-get -y remove tint2conf 
    rm -f ~/.tint2conf.remove
fi
sudo aptitude upgrade apt aptitude dpkg

# jumping target releases is too much for aptitude
sudo apt-get upgrade && sudo apt-get dist-upgrade

# echo ".. reboot (network manager likely disabled and font garbled by xorg updates)"
# echo ".. complete update with crunchbang-2post-update"
~/bin/install/crunchbang-2post-update
