#!/bin/bash

echo "... script installing rvm"

curl -#L https://get.rvm.io | bash -s stable --autolibs=3 --ruby

source ~/.rvm/scripts/rvm

echo "... installing testing and profiling gems"
gem install chronic
gem install churn
gem install flay
gem install flog
gem install gettext
#gem install rcov
gem install simplecov
gem install reek
gem install ripper_ruby_parser
gem install roodi
gem install ruby2ruby
gem install ruby_parser
gem install saikuro
gem install sexp_processor
gem install shoes
gem install simple-tracer
gem install term-ansicolor
install graphviz

echo "... installing web frameworks gems"
install libxslt1-dev
gem install albino
gem install builder
gem install curl
gem install fastthread
gem install kramdown
gem install nokogiri
gem install padrino
gem install rack
#gem install rack-perftools_profiler
gem install redcarpet
gem install sanitize
gem install shotgun
gem install sinatra
gem install slim
gem install thin
#gem install tilt
gem install xapian-fu
install libxapian-ruby1.9.1

echo "... installing phusion passenger"
gem install passenger --version 3.0.19
sudo passenger-install-nginx-module
sudo cp /opt/nginx/conf/nginx.conf /opt/nginx/conf/nginx.conf.original
sudo cp /home/shum/.config/opt/nginx/conf/nginx.conf /opt/nginx/conf/
sudo cp /srv/www/init-deb.sh /etc/init.d/nginx
sudo update-rc.d nginx defaults
