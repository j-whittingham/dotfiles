#!/usr/bin/env fish
# exposure blending hdr manager

log "... script installing macrofusion"

install python-pyexiv2

cd /data/depot/photography/macrofusion
tar xzvf macrofusion_0.7.3.orig.tar.gz
sudo mv macrofusion-0.7.3 /opt/macrofusion
sudo ln -svf /opt/macrofusion/macrofusion.py /usr/local/bin/macrofusion

