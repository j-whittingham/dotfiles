#!/usr/bin/env fish

log "... script installing mercurial extension"

mkdir /data/depot/system/mercurial 2>/dev/null

cd /data/depot/system/mercurial
hg clone https://bitbucket.org/durin42/histedit

cd histedit
sudo python setup.py install
sudo mv hg_histedit.py /usr/local/bin/

grep hg_histedit ~/.hgrc; or sed -i '$a[extensions]\
histedit = /usr/local/bin/hg_histedit.py' ~/.hgrc
