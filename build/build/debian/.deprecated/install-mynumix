#!/usr/bin/env fish
# update Numix icon set with visible dropbox icons

headline+ "install numix icons"

cd $HOME/.icons
[ -d myNumix ]; and command rm -rf myNumix
git clone https://github.com/cldx/numix.git myNumix
mkdir myNumix/apps/scalable 2>/dev/null
mkdir myNumix/emblems/scalable 2>/dev/null
mkdir myNumix/places/scalable 2>/dev/null
mkdir myNumix/status/scalable 2>/dev/null
cp -v NITRUX/apps/scalable/*dropbox* myNumix/apps/scalable/
cp -v NITRUX/emblems/scalable/*dropbox* myNumix/emblems/scalable/
cp -v NITRUX/places/scalable/*dropbox* myNumix/places/scalable/
cp -v NITRUX/status/scalable/*dropbox* myNumix/status/scalable/

# vim: set ft=fish: #
