#!/usr/bin/env fish
# setup fish user extensions for user $argv

[ "$argv" = "" ]; and set user $USER; or set user $argv
[ "$user" = "root" ]; and set pwd /root; or set pwd /home/$argv
if [ ! -d $pwd ]
    echo ".. crunchbang-6fishshell <user>"
    exit
end
log "... script configuring fish"
sudo chsh --shell /usr/local/bin/fish $user

# some shell and vim niceties
sudo ln -svf /home/shum/.config/fish $pwd/.config/fish
sudo ln -svf /home/shum/.fonts $pwd/.fonts
sudo ln -svf /home/shum/.vim $pwd/.vim
sudo ln -svf /home/shum/.vimrc $pwd/.vimrc
sudo ln -svf /home/shum/.bashrc $pwd/.bashrc
sudo ln -svf /home/shum/.bash_aliases $pwd/.bash_aliases

