#!/bin/bash
# build and insert zfs kernel module

echo "... building zfs kernel modules ..."

[ -d $HOME/sanbdox ] || mkdir $HOME/sandbox
cd $HOME/sandbox

sudo wget http://archive.zfsonlinux.org/debian/pool/main/z/zfsonlinux/zfsonlinux_1%7Ewheezy_all.deb
sudo dpkg -i zfsonlinux_1~wheezy_all.deb
sudo apt-get update
#sudo apt-get -y install libkmod-dev
#sudo apt-get -y install spl-dev
sudo apt-get -y install debian-zfs
#sudo update-rc.d zfs-mount defaults
#sudo systemctl enable zfs-mount.service
#sudo systemctl enable zfs-share.service
#sudo systemctl start zfs-mount.service
#sudo systemctl start zfs-share.service

sudo rm -v zfsonlinux_1~wheezy_all.deb
cd ..
