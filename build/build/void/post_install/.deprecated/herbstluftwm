# ................................................................. herbstluftwm

config_install /etc/profile.d/herbstluftwm.sh
sudo chmod 755 /etc/profile.d/herbstluftwm.sh

[ -e ~/.xinitrc ] || sed -i '$a\
exec herbstluftwm\
' ~/.xinitrc

