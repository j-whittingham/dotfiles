# .......................................................................... mpv

if gpu intel ;then
  mkdir -p $HOME/.config/mpv
  sed '/hwdec/chwdec=vaapi' /usr/share/examples/mpv/mpv.conf >$HOME/.config/mpv/mpv.conf
fi

