# .................................................................... msmtp-mta

# configure mail spooler
if ! grep -q logrotate /var/spool/cron/$USER 2>/dev/null ;then
  echo "$(crontab -l)
0 * * * * /usr/sbin/logrotate -s $HOME/tmp/logrotate.status $HOME/.config/logrotate/logrotate.conf"  |
       sudo crontab -u $USER -
fi

