# ...................................................................... Compton

# compton compositor state flag dependent
if [ -e $COMPTON ] ;then
  if ! pidof compton >/dev/null ;then
    compton -e 0.1 >/tmp/compton.log 2>&1 &
    xscreensaver -no-splash &
  fi
elif pidof compton >/dev/null ;then
  killall compton
  killall xscreensaver
fi

