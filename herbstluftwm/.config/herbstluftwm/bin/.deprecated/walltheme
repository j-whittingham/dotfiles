#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="bin/walltheme $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................... Set wallpaper color theme

# if slickpicker doesn't return color value, only present once
which slickpicker >/dev/null 2>&1 && color=true

# see draw root
while :
do
  if [ $color ] ;then
    color=$(slickpicker)
    color=${color#\#}
  fi
  if [ $color ] ;then
    conky theme test $color
  else
    conky theme test "$(randcolor)"
  fi
  if-no 'keep conky theme' || break
done

# vim: set ft=sh: #
